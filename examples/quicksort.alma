func comp sort-one:
    shift -> first
    [first append]
    if: [first comp apply] [2dip] [dip]
;

func comp partition:
    [{} {}] dip
    while*: [empty not] [comp sort-one]
    drop
;

func quicksort:
    when*: [small not] [
        shift -> pivot
        [pivot <] partition
        'quicksort bi@ pivot swap cons concat
    ]
;

